{
  "name": "apitestframework",
  "version": "1.0.0",
  "description": "A mocha-chai-supertest framework for testing a Node RESTful API",
  "main": "index.js",
  "scripts": {
    "test": "export NODE_ENV=test && nodemon server.js",
    "mocha": "export NODE_ENV=test && nodemon --exec 'mocha */**.test.js --exit'",
    "production": "export NODE_ENV=production && nodemon server.js",
    "start": "nodemon server.js",
    "docker": "export NODE_ENV=docker && docker-compose up"
  },
  "keywords": [
    "REST",
    "api",
    "mocha",
    "chai",
    "supertest"
  ],
  "author": "Imender Singh Rehal",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "express": "^4.17.3",
    "mongoose": "^5.8.3",
    "ejs": "^3.0.1"
  }
}
